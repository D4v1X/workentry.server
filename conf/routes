# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing how to write asynchronous code
GET           /                controllers.TestController.message

# Workentry Router
GET           /users            controllers.UserController.findAll
GET           /users/:id        controllers.UserController.findById(id: Int)
POST          /users            controllers.UserController.add()
PUT           /users            controllers.UserController.update()
DELETE        /users/:id        controllers.UserController.delete(id: Int)
